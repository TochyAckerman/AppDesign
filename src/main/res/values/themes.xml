<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppDesign" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#82CCC5</item>
        <item name="colorPrimaryVariant">#82ccc5</item>
        <item name="colorOnPrimary">#82ccc5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="greenButton" parent="android:style/Widget.Button.Small">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/green_btn</item>
    </style>

    <style name="whiteButton" parent="android:style/Widget.Button.Small">
        <item name="android:textSize">18dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#011627</item>
        <item name="android:background">@drawable/white_btn</item>
    </style>


</resources>